{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/app.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "args": [
                "${input:config}",
                "${input:directory}"
            ],
            "env": {
                "VSCMD_START_DIR": "${workspaceRoot}"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "PNC",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\app.js",
            "args": [
                "${workspaceFolder}\\src\\config\\pnc-bank.json",
                "${workspaceFolder}\\src\\test-config\\pncbank.csv"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "USBank",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\app.js",
            "args": [
                "${workspaceFolder}\\src\\config\\usbank-bank.json",
                "${input:args}"
             ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "FidelityVisa",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\app.js",
            "args": [
                "${workspaceFolder}\\src\\config\\fidelity-visa.json",
                "${workspaceFolder}\\src\\test-config\\fidelity-visa.csv"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Merrill Lynch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\app.js",
            "args": [
                "${workspaceFolder}\\src\\config\\ml-invest.json",
                "${workspaceFolder}\\src\\test-config\\ml-investment.csv"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Fidelity IRA",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\app.js",
            "args": [
                "${workspaceFolder}\\src\\config\\fidelity-ira.json",
                "${workspaceFolder}\\src\\test-config\\fidelity-ira.csv"
            ]
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "config",
            "description": "configuration file",
            "options": [
                "${workspaceFolder}/src/config/usbank-bank.json",
                "${workspaceFolder}/src/config/pnc-bank.json",
                "${workspaceFolder}/src/config/ml-invest.json",
                "${workspaceFolder}/src/config/fielity-visa.json",
                "${workspaceFolder}/src/config/fidelity-brokerage.json",
                "${workspaceFolder}/src/config/fidelity-ira.json"
            ],
            "default": "${workspaceFolder}/src/config/fidelity-ira.json"
        },
        {
            "type": "promptString",
            "id": "directory",
            "description": "Directory name which contains csv files",
            "default": "C:\\Users\\Test Name\\Downloads"
        }
    ]
}