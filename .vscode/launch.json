{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/app.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "args": [
                "${input:directory}",
                "${input:config}"
            ],
            "env": {
                "VSCMD_START_DIR": "${workspaceRoot}"
            }
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "directory",
            "description": "Directory name which contains csv files",
            "default":  "${env:UserProfile}/Downloads"
        },
        {
            "type": "pickString",
            "id": "config",
            "description": "configuration file",
            "options": [
                "${workspaceFolder}/src/config/usbank-bank.json",
                "${workspaceFolder}/src/config/pnc-bank.json",
                "${workspaceFolder}/src/config/hsabank.json",
                "${workspaceFolder}/src/config/schwab-invest.json",
                "${workspaceFolder}/src/config/wexhealth.json",
                "${workspaceFolder}/src/config/ml-invest.json",
                "${workspaceFolder}/src/config/ml-boa-hsa.json",
                "${workspaceFolder}/src/config/fidelity-visa.json",
                "${workspaceFolder}/src/config/fidelity-brokerage.json",
                "${workspaceFolder}/src/config/fidelity-ira.json",
                "${workspaceFolder}/src/config/fidelity-espp.json",
                "${workspaceFolder}/src/config/rq-mine.json"
            ],
            "default": "${workspaceFolder}/src/config/rq-mine.json"
        }
    ]
}